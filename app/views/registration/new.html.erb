<div class="row-fluid page-title">
  <h2>Sign up</h2>
</div>

<div class="row-fluid">
  <div class="span6">
    <%= form_tag(member_registration_path,:method => 'post') %>
    <%= devise_error_messages! %>
    <div class="well">
      <div>
        <label for="member_username">Username</label>
        <%=text_field_tag "member[username]",@member.username %>
      </div>
      <div>
        <label for="member_email">Email</label>
        <%=email_field_tag "member[email]",@member.email %>
      </div>
      <div>
        <label for="member_password">Password</label>
        <%=password_field_tag "member[password]",@member.password %>
      </div>
      <div>
        <label for="member_password_confirmation">Retype password</label>
        <%=password_field_tag "member[password_confirmation]",@member.password_confirmation %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Sign Up".html_safe, :class => "form_submit btn btn-primary button-loading" %>
      &nbsp;&nbsp;
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>




