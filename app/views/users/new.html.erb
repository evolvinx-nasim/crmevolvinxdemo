<div class="row-fluid page-title">
  <h2>New user</h2>
</div>

<div class="row-fluid">
  <div class="span6">
    <form method="post" action="">
      <div class="well">
        <div>
          <label>Username</label>
          <input type="text" name="member[username]" />
        </div>
        <div>
          <label>Email</label>
          <input type="text" name="member[email]" />
        </div>
        <div>
          <label>Password</label>
          <input type="password" name="member[password]" />
        </div>
        <div>
          <label>Confirm Password</label>
          <input type="password" name="member[password_confirmation]" />
        </div>
        <div>
          <label>Role</label>
          <select name="member[role_id]" >
            <% if @roles.count > 0 %>
            <% for role in @roles do %>
            <option value="<%= role.id %>"><%= role.name %></option>
            <% end %>
            <% else %>
            <option value="">Select</option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" id="submit" class="btn btn-primary">Create User</button>
      </div>
    </form>
  </div>
</div>














