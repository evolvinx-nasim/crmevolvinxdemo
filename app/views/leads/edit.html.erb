<div class="row-fluid page-title">
  <h2>Update Lead</h2>
</div>
<div id="editLead">
  <div id="ajaxHandler">
    <div class="row-fluid">
      <div id="crmAjaxProgress" class="progress progress-striped active" style="display: none;">
        <div class="bar" style="width: 100%;"></div>
      </div>
      <div id="crmAjaxMessage" class="alert" style="display: none;">
        Error!
      </div>
    </div>
  </div>
  <%= simple_form_for(@lead, :url => lead_path(:id => @lead.unique_id), :method => :update, :html => {:class => "form-horizontal"})  do |f| %>
    <div class="field-set-container">
      <h1 class="title">Personal Information</h1>
      <div class="body">
        <div class="row-fluid">
          <div class="span5">
            <%= f.input :title, :collection =>[["Mr.","Mr."],["Mrs.","Mrs."]], :selected => @lead.title %>
            <%= f.input :firstname, :label => (t "lead.firstname") %>
            <%= f.input :lastname, :label =>(t "lead.lastname") %>
            <%= f.input :email, :label =>(t "lead.email") %>
          </div>
          <div class="span5">
            <%= f.input :status, :collection =>[["Contacted","Contacted"],["Open","Open"],["Qualified","Qualified"],["Unqualified","Unqualified"]], :selected => @lead.status %>
            <%= f.input :company, :label =>(t "lead.company") %>
            <%= f.input :phone, :label =>(t "lead.phone") %>
            <%= f.input :ratting, :collection =>[["Select",""],["Hot","Hot"],["Warm","Warm"],["Cold","Cold"]], :selected => @lead.ratting %>
          </div>
        </div>
      </div>
    </div>

    <div class="field-set-container">
      <h1 class="title">Address Information</h1>
      <div class="body">
        <div class="row-fluid">
          <div class="span5">
            <%= f.input :street, :as => :text, :input_html => { :cols => 50, :rows => 3 } %>
          </div>
          <div class="span5">
            <%= f.input :city, :label =>(t "lead.city") %>
            <%= f.input :state, :label =>(t "lead.state") %>
            <%= f.input :zip, :label =>(t "lead.zip") %>
          </div>
        </div>
      </div>
    </div>
    <div class="field-set-container">
      <h1 class="title">Other Information</h1>
      <div class="body">
        <div class="row-fluid">
          <div class="span5">
            <%= f.input :annual_revenue, :label =>(t "lead.annual_revenue") %>
            <%= f.input :employee_no, :label =>(t "lead.no_of_employee") %>
            <%= f.input :lead_source, :label =>(t "lead.lead_source") %>
          </div>
          <div class="span5">
            <%= f.input :description, :as => :text, :input_html => { :cols => 50, :rows => 3 } %>
          </div>
        </div>
      </div>
    </div>


    <div class="form-actions">
      <div class="btn-group">
        <%= f.submit nil, :class => "btn btn-primary" %>
          <a class="btn btn-small" href="<%= lead_path(:id => @lead.unique_id) %>">Cancel</a>
      </div>
    </div>
  <% end %>
</div>